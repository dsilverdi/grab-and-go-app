<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_shopping_history"
        android:minWidth="240dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="6dp"
        android:gravity="start"
        android:background="@drawable/rounded_border_button"
        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_outline_inventory_24"
        app:iconGravity="start"
        app:iconSize="16dp"
        app:iconPadding="12dp"
        app:iconTint="@color/gray"
        android:textAllCaps="false"
        android:text="@string/shopping_history"
        android:textSize="15sp"
        android:textColor="@color/gray" />
    <ImageButton
        android:id="@+id/btn_shopping_history_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_round_arrow_forward_small"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/purple_figma"
        android:translationZ="2dp"
        android:layout_gravity="center|end"
        android:layout_marginEnd="24dp"
        tools:ignore="ContentDescription"/>
</FrameLayout>